{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@nx-ng-strapi-prototype/api-interfaces": [
                "libs/api-interfaces/src/index.ts"
            ],
            "@nx-ng-strapi-prototype/strapi/domain": [
                "libs/strapi/domain/src/index.ts"
            ],
            "@secrets": ["libs/any-shared/secrets/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
